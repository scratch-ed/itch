{
  "name": "itch",
  "version": "0.3.0",
  "description": "Scratch judge for Dodona",
  "contributors": [
    "Nils Mak",
    "Niko Strijbol",
    "Cedric Vanhaverbeke"
  ],
  "private": true,
  "workspaces": [
    "packages/**",
    "exercises/**",
    "types/**"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "watch": "npm run watch --workspace itch-core",
    "dev:api": "npm run dev --workspace itch-api",
    "api": "npm start --workspace itch-api",
    "start": "npm start --workspace itch-runner",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf ./**/node_modules",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "itch": "node packages/external-runner/src/cli.js"
  }
}

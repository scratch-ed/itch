{
  "name": "itch",
  "version": "0.0.1",
  "description": "Scratch judge for Dodona",
  "contributors": [
    "Nils Mak",
    "Niko Strijbol",
    "Cedric Vanhaverbeke"
  ],
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "scripts": {
    "watch": "npm run watch --workspace itch-core",
    "api": "npm start --workspace itch-api",
    "start": "npm start --workspace itch-runner",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rimraf ./node_modules",
    "lint": "eslint ."
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}

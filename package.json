{
  "name": "@ftrprf/scratch-judge",
  "private": true,
  "version": "1.0.0-development.4",
  "description": "Scratch judge for FTRPRF",
  "workspaces": [
    "packages/**",
    "exercises/**",
    "types/**"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript-json-schema": "^0.53.0"
  },
  "scripts": {
    "generate:output": "npm run generate:output --workspace @ftrprf/judge-core",
    "watch": "npm run watch --workspace @ftrprf/judge-core",
    "build": "npm run build --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test:exercises": "jest --selectProjects stableExercises --silent",
    "test:exercises:all": "jest --runInBand --selectProjects exercises",
    "clean": "npm run clean --workspaces --if-present && rimraf ./**/node_modules",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release:prerelease": "npm version prerelease --workspace packages --include-workspace-root --preid=development --no-git-tag-version",
    "release:prepminor": "npm version preminor --workspace packages --include-workspace-root --preid=development --no-git-tag-version",
    "release:premajor": "npm version premajor --workspace packages --include-workspace-root --preid=development --no-git-tag-version",
    "release:patch": "npm version patch --workspace packages --include-workspace-root --no-git-tag-version",
    "release:minor": "npm version minor --workspace packages --include-workspace-root --no-git-tag-version",
    "release:major": "npm version major --workspace packages --include-workspace-root --no-git-tag-version"
  },
  "jest": {
    "projects": [
      {
        "displayName": "exercises",
        "testMatch": [
          "<rootDir>/exercises/**/*.test.js"
        ]
      },
      {
        "displayName": "stableExercises",
        "testMatch": [
          "<rootDir>/exercises/agario/*.test.js",
          "<rootDir>/exercises/bouw-de-raket/*.test.js",
          "<rootDir>/exercises/chaos-in-de-raket/*.test.js",
          "<rootDir>/exercises/eerste-testvlucht/*.test.js",
          "<rootDir>/exercises/koppel-motoren-los/*.test.js",
          "<rootDir>/exercises/maanbal/*.test.js",
          "<rootDir>/exercises/navigeer-rommel/*.test.js",
          "<rootDir>/exercises/rommelruimend/*.test.js",
          "<rootDir>/exercises/vernietig-asteroiden/*.test.js",
          "<rootDir>/exercises/r0nn-op-avontuur/*.test.js"
        ]
      }
    ]
  }
}

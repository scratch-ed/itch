{
  "name": "@ftrprf/scratch-judge",
  "private": true,
  "version": "0.3.0",
  "description": "Scratch judge for FTRPRF",
  "workspaces": [
    "packages/**",
    "exercises/**",
    "types/**"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "ipm": "npm run ipm --workspace itch-package-manager sync ./exercises",
    "watch": "npm run watch --workspace @ftrprf/judge-core",
    "start": "npm start --workspace @ftrprf/judge-runner",
    "build": "npm run build --workspaces --if-present",
    "test:exercises": "jest --runInBand --selectProjects stableExercises",
    "test:exercises:all": "jest --runInBand --selectProjects exercise",
    "clean": "npm run clean --workspaces --if-present && rimraf ./**/node_modules",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "jest": {
    "projects": [
      {
        "displayName": "exercises",
        "testMatch": [
          "<rootDir>/exercises/**/*.test.js"
        ]
      },
      {
        "displayName": "stableExercises",
        "testMatch": [
          "<rootDir>/exercises/zombiebal/*.test.js",
          "<rootDir>/exercises/navigeer-rommel/*.test.js",
          "<rootDir>/exercises/space/*.test.js",
          "<rootDir>/exercises/rommelruimend/*.test.js",
          "<rootDir>/exercises/geld-inzamelen/*.test.js",
          "<rootDir>/exercises/agario/*.test.js",
          "<rootDir>/exercises/eerste-testvlucht/*.test.js",
          "<rootDir>/exercises/chaos-in-de-raket/*.test.js",
          "<rootDir>/exercises/koppel-motoren-los/*.test.js",
          "<rootDir>/exercises/vernietig-asteroiden/*.test.js"
        ]
      }
    ]
  }
}
